---
// src/components/EmailImage.astro
import { Image } from 'astro:assets';

const { src, alt } = Astro.props;

// Získame metadata o obrázku (vrátane finálnej cesty)
const imageMeta = await src; 

// Poskladáme absolútnu URL
const absoluteSrc = new URL(imageMeta.src, Astro.site).href;
---
<img 
  src={absoluteSrc} 
  alt={alt}
  width={imageMeta.width}
  height={imageMeta.height}
  style="display:block; max-width:100%; width: 100%; height:auto;"
  border="0"
/>